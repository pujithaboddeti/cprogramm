//write a program to print maximum and minimum number from the array
#include<stdio.h>
main()
{
    int min,max,i,n;
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    min=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]<min)
            min=a[i];
    }
    max=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]>max)
            max=a[i];
    }
    printf("the minimum in array:%d",min);
    printf("\n the maximum in array:%d",max);
}
